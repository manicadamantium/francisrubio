<a href="#main" class="skip-link">Skip to content</a>
<nav class="navigation-bar">
  <div class="navigation-brand">
    <a href="/" class="navigation-link fs-3 padding-bottom--none">Francis Rubio</a>
    <span class="padding-inline--m">Web developer, designer, and educator</span>
  </div>
  <ul class="navigation-links" data-navigation-links>
    {% for nav in navigation %}
      <li>
        <a href="{{ nav.url }}" class="navigation-link">
          {% if nav.text %}
            <span class="navigation-link-text">{{ nav.text }}</span>
          {% endif %}
          {% if nav.feathericon %}
            <span class="navigation-link-icon">
              {% set feathericon = nav.feathericon %}
              {% include 'components/feathericon.njk' %}
            </span>
          {% endif %}
          {% if nav.label %}
            <span class="navigation-link-label">{{ nav.label }}</span>
          {% endif %}
        </a>
      </li>
    {% endfor %}
  </ul>
</nav>