<a href="{{ postURL }}" class="talk-card" data-index="{% padStart index, 2, "0" %}">
  <h3 class="talk-card__title">{{ post.title | safe }}</h3>
  <p class="talk-card__description">{{ post.description | safe }}</p>
  <p class="talk-card__time">
    {% set feathericon = 'calendar' %}
    {% include 'components/feathericon.njk' %}
    <time datetime="{{ item.date | machineReadableDate }}">{{ item.date | humanReadableDate }}</time>
  </p>
  <p class="talk-card__location">
    {% set feathericon = 'map-pin' %}
    {% include 'components/feathericon.njk' %}
    {{ post.location | safe }}
  </p>
</a>