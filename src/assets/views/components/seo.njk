<!-- Primary Meta Tags -->
<meta name="title" content="{{ title if title else site.title }}">
<meta name="description" content="{{ description if description else site.description }}">

<link rel="manifest" href="/manifest.webmanifest">
<link rel="icon" href="/favicon.ico" sizes="any">
<link rel="icon" href="/favicon.svg" type="image/svg+xml">
<link rel="apple-touch-icon" href="/apple-touch-icon.png">

{% if not fb_image %}
  {% set fb_image %}/assets/images{{ image }}{% endset %}
{% endif %}

{% if not twitter_image %}
  {% set twitter_image %}/assets/images{{ image }}{% endset %}
{% endif %}

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website">
<meta property="og:url" content="{{ site.url }}{{ page.url if page.url }}">
<meta property="og:title" content="{{ title if title else site.title }}">
<meta property="og:description" content="{{ description if description else site.description }}">
<meta property="og:image" content="{{ site.url }}{{ fb_image if fb_image else site.seo.fb_image }}">

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image">
<meta property="twitter:url" content="{{ site.url }}{{ page.url if page.url }}">
<meta property="twitter:title" content="{{ title if title else site.title }}">
<meta property="twitter:description" content="{{ description if description else site.description }}">
<meta property="twitter:image" content="{{ site.url }}{{ twitter_image if twitter_image else site.seo.twitter_image }}">